{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card card-default">
                <div class="card-header">
                    <h4 class="card-title">Crear Nuevo Cliente</h4>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.name) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    {{ form_label(form.cif, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.cif, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.cif) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    {{ form_label(form.address, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.address, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.address) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    {{ form_label(form.postal, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.postal, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.postal) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    {{ form_label(form.location, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.location, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.location) }}
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    {{ form_label(form.country, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.country, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.country) }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group mb-3">
                                    {{ form_label(form.notes, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.notes, {'attr': {'class': 'form-control'}}) }}
                                    {{ form_errors(form.notes) }}
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary mt-3">Guardar Cliente</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}