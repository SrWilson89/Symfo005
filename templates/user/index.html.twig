{# templates/user/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Lista de Usuarios{% endblock %}

{% block body %}
    <h1>Lista de Usuarios</h1>

    <a href="{{ path('app_user_new') }}" class="btn btn-primary mb-3">Crear nuevo usuario</a>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Roles</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.roles|join(', ') }}</td>
                <td>
                    <a href="{{ path('app_user_edit', {'id': entity.id}) }}" class="btn btn-sm btn-warning">editar</a>
                    <a href="{{ path('app_user_delete', {'id': entity.id}) }}" class="btn btn-sm btn-danger">eliminar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No se encontraron usuarios.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}