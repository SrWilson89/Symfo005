{# Archivo: templates/user/profile.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Perfil de Usuario{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0 rounded-lg">
                    <div class="card-header bg-dark text-white text-center">
                        <h3 class="font-weight-light my-3">Perfil de Usuario</h3>
                    </div>
                    <div class="card-body">
                        <p class="lead">
                            <i class="fas fa-envelope me-2 text-primary"></i>
                            <strong>Email:</strong> {{ app.user.email }}
                        </p>
                        <p class="lead">
                            <i class="fas fa-user-tag me-2 text-info"></i>
                            <strong>Roles:</strong> {{ app.user.roles|join(', ') }}
                        </p>
                        <div class="d-grid mt-4">
                            <a href="{{ path('app_user_edit', {'id': app.user.id}) }}" class="btn btn-primary btn-lg">
                                <i class="fas fa-edit me-2"></i>Editar perfil
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}