{# Archivo: templates/customer/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Clientes{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Listado de Clientes</h1>
            <a href="{{ path('app_customer_new') }}" class="btn btn-success">
                <i class="fas fa-plus-circle me-2"></i>Crear nuevo cliente
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm">
                <thead class="bg-primary text-white">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Email</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <th scope="row">{{ entity.id }}</th>
                        <td>{{ entity.nombre }}</td>
                        <td>{{ entity.email }}</td>
                        <td class="text-center">
                            <a href="{{ path('app_customer_edit', {'id': entity.id}) }}" class="btn btn-sm btn-warning me-2" title="Editar">
                                <i class="fas fa-edit"></i>
                            </a>
                            
                            <form method="post" action="{{ path('app_customer_delete', {'id': entity.id}) }}" onsubmit="return confirm('¿Estás seguro de que quieres eliminar este cliente?');" style="display: inline-block;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entity.id) }}">
                                <button type="submit" class="btn btn-sm btn-danger" title="Eliminar">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">No se encontraron clientes.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}