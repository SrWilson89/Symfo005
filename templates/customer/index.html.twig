{% extends 'base.html.twig' %}

{% block title %}Clientes{% endblock %}

{% block body %}
    <h1>Listado de Clientes</h1>

    <a href="{{ path('app_customer_new') }}" class="btn btn-primary mb-3">Crear nuevo cliente</a>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th>Email</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.direccion }}</td>
                <td>{{ entity.telefono }}</td>
                <td>{{ entity.email }}</td>
                {# <td>
                    <a href="{{ path('app_customer_show', {'id': entity.id}) }}" class="btn btn-sm btn-info">Ver</a>
                    <a href="{{ path('app_customer_edit', {'id': entity.id}) }}" class="btn btn-sm btn-warning">Editar</a>
                </td> #}
            </tr>
        {% else %}
            <tr>
                <td colspan="6">No se encontraron registros.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}