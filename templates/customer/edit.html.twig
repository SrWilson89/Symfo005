{% extends 'base.html.twig' %}

{% block content %}
    <div class="card">
        <div class="card-header">
            <strong>{{ name }}</strong>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button class="btn btn-primary mt-3">Guardar cambios</button>
            <a href="{{ path('app_list', {'entity': 'customer'}) }}" class="btn btn-secondary mt-3">Cancelar</a>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}