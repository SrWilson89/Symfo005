{% extends 'base.html.twig' %}

{% block title %}Índice de Tareas{% endblock %}

{% block body %}
    <h1>Índice de Tareas</h1>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>Notas</th>
                <th>Fecha de Creación</th>
                <th>Fecha de Edición</th>
                <th>Título</th>
                <th>Descripción</th>
                <th>Fecha Límite</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for tarea in entities %}
            <tr>
                <td>{{ tarea.id }}</td>
                <td>{{ tarea.notas }}</td>
                <td>{{ tarea.dateAdd ? tarea.dateAdd|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ tarea.dateEdit ? tarea.dateEdit|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ tarea.titulo }}</td>
                <td>{{ tarea.descripcion }}</td>
                <td>{{ tarea.fechaLimite ? tarea.fechaLimite|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_tareas_show', {'id': tarea.id}) }}" class="btn btn-info btn-sm">ver</a>
                    <a href="{{ path('app_tareas_edit', {'id': tarea.id}) }}" class="btn btn-warning btn-sm">editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">No se encontraron registros</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_tareas_new') }}" class="btn btn-success mt-3">Crear nueva</a>
{% endblock %}