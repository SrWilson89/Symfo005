{% extends 'base.html.twig' %}

{% block title %}Detalles de la Tarea{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center mb-4">Detalles de la Tarea</h1>

        <div class="card shadow-sm">
            <div class="card-body">
                <table class="table table-hover table-striped">
                    <tbody>
                        <tr>
                            <th class="w-25">Id</th>
                            <td>{{ tarea.id }}</td>
                        </tr>
                        <tr>
                            <th class="w-25">Notas</th>
                            <td>{{ tarea.notas }}</td>
                        </tr>
                        <tr>
                            <th class="w-25">Fecha de Creación</th>
                            <td>{{ tarea.dateAdd ? tarea.dateAdd|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th class="w-25">Fecha de Edición</th>
                            <td>{{ tarea.dateEdit ? tarea.dateEdit|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th class="w-25">Título</th>
                            <td>{{ tarea.titulo }}</td>
                        </tr>
                        <tr>
                            <th class="w-25">Descripción</th>
                            <td>{{ tarea.descripcion }}</td>
                        </tr>
                        <tr>
                            <th class="w-25">Fecha Límite</th>
                            <td>{{ tarea.fechaLimite ? tarea.fechaLimite|date('Y-m-d') : '' }}</td>
                        </tr>
                        <tr>
                            <th class="w-25">Estado</th>
                            <td>{{ tarea.estado.nombre }}</td>
                        </tr>
                        <tr>
                            <th class="w-25">Cliente</th>
                            <td>{{ tarea.cliente.name }}</td>
                        </tr>
                        <tr>
                            <th class="w-25">Usuario</th>
                            <td>{{ tarea.usuario.email }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_tareas_index') }}" class="btn btn-secondary">Volver a la lista</a>
            <div class="btn-group" role="group">
                <a href="{{ path('app_tareas_edit', {'id': tarea.id}) }}" class="btn btn-warning">Editar</a>
                {{ include('tareas/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}