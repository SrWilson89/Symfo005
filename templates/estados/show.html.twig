{% extends 'base.html.twig' %}

{% block title %}Detalles del Estado{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-lg p-4">
                    <h1 class="text-center mb-4">Detalles del Estado</h1>
                    <table class="table table-hover table-bordered">
                        <tbody>
                            <tr>
                                <th class="w-25">Id</th>
                                <td>{{ estado.id }}</td>
                            </tr>
                            <tr>
                                <th>Estado</th>
                                <td>{{ estado.estado }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('app_list', {'entity': 'estados'}) }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Volver a la lista
                    </a>
                    <div class="btn-group" role="group">
                        <a href="{{ path('app_estados_edit', {'id': estado.id}) }}" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i>Editar
                        </a>
                        {{ include('estados/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}