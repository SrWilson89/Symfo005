{# templates/estados/_delete_form.html.twig #}

<form method="post" action="{{ path('app_estados_delete', {'id': estado.id}) }}" onsubmit="return confirm('¿Estás seguro de que quieres eliminar este elemento?');" class="d-inline-block ms-2">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ estado.id) }}">
    <button class="btn btn-danger">
        <i class="fas fa-trash-alt me-2"></i>Eliminar
    </button>
</form>