{% extends 'base.html.twig' %}

{% block title %}Estados index{% endblock %}

{% block body %}
    <h1>Estados index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Estado</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for estado in estados %}
            <tr>
                <td>{{ estado.id }}</td>
                <td>{{ estado.estado }}</td>
                <td>
                    <a href="{{ path('app_estados_show', {'id': estado.id}) }}">show</a>
                    <a href="{{ path('app_estados_edit', {'id': estado.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_estados_new') }}">Create new</a>
{% endblock %}
