{% extends 'base.html.twig' %}

{% block title %}Lista de Estados{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Lista de Estados</h1>
            <a href="{{ path('app_estados_new') }}" class="btn btn-success">
                <i class="fas fa-plus-circle me-2"></i>Crear nuevo estado
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-hover table-striped shadow-sm">
                <thead class="bg-dark text-white">
                    <tr>
                        <th class="text-center">Id</th>
                        <th>Estado</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td class="text-center">{{ entity.id }}</td>
                            <td>{{ entity.estado }}</td>
                            <td class="text-center">
                                <a href="{{ path('app_estados_show', {'id': entity.id}) }}" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye me-1"></i>Mostrar
                                </a>
                                <a href="{{ path('app_estados_edit', {'id': entity.id}) }}" class="btn btn-warning btn-sm ms-2">
                                    <i class="fas fa-edit me-1"></i>Editar
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center">No se encontraron estados.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}