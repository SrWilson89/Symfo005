{# templates/hilo/index.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Lista de Hilos{% endblock %}

{% block body %}
    <h1>Lista de Hilos</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Fecha de Creación</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.id }}</td>
                <td>{{ entity.titulo }}</td>
                <td>{{ entity.fechaCreacion|date('Y-m-d H:i:s') }}</td>
                <td>
                    <a href="{{ path('app_hilo_show', {'id': entity.id}) }}">mostrar</a>
                    <a href="{{ path('app_hilo_edit', {'id': entity.id}) }}">editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No se encontraron hilos.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_hilo_new') }}">Crear nuevo hilo</a>
{% endblock %}