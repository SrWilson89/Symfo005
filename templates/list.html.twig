{% extends 'base.html.twig' %}

{% block content %}
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="card-title m-0">
                <i class="fas fa-list"></i> {{ name }}
            </h2>
            {% if name == 'Listado de Usuarios' %}
                <a href="{{ path('app_user_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Añadir nuevo
                </a>
            {% elseif name == 'Listado de Clientes' %}
                <a href="{{ path('app_customer_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Añadir nuevo
                </a>
            {% endif %}
        </div>
        <form action="{{ path('app_list', {'entity': 'customer'}) }}" method="GET" class="mb-3">
            <div class="input-group">
                <input type="text" name="q" class="form-control" placeholder="Buscar clientes por nombre o CIF..." value="{{ app.request.query.get('q') }}">
                <button class="btn btn-outline-secondary" type="submit">Buscar</button>
            </div>
        </form>
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead>
                    <tr>
                        {% for item in fields %}
                            <th>{{ item }}</th>
                        {% endfor %}
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in items %}
                        <tr>
                            {% if name == 'Listado de Clientes' %}
                                <td>{{ item.id }}</td>
                                <td>{{ item.name }}</td>
                                <td>{{ item.cif }}</td>
                                <td>{{ item.address }}</td>
                                <td>{{ item.postal }}</td>
                                <td>{{ item.location }}</td>
                                <td>{{ item.country }}</td>
                                <td>{{ item.notes }}</td>
                                <td>{{ item.getDateAdd() ? item.getDateAdd()|date('d/m/Y H:i:s') : '' }}</td>
                                <td>{{ item.getDateEdit() ? item.getDateEdit()|date('d/m/Y H:i:s') : '' }}</td>
                                <td>
                                    <a href="{{ path('app_customer_edit', {'id': item.id}) }}" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="{{ path('app_customer_delete', {'id': item.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro de que quieres eliminar este cliente?');">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            {% else %}
                                <td>{{ item.id }}</td>
                                <td>{{ item.email }}</td>
                                <td>{{ item.roles|join(', ') }}</td>
                                <td>
                                    <a href="{{ path('app_user_edit', {'id': item.id}) }}" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="{{ path('app_user_delete', {'id': item.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro de que quieres eliminar este usuario?');">
                                        <i class="fas fa-trash-alt"></i>
                                    </a>
                                </td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="d-flex justify-content-center mt-3">
            <nav>
                <ul class="pagination">
                    {% set current = page %}
                    {% set url = path('app_list', {'entity': 'customer'}) ~ (app.request.query.get('q') ? '&q=' ~ app.request.query.get('q') : '') %}

                    <li class="page-item {% if current == 1 %}disabled{% endif %}">
                        <a class="page-link" href="{{ url ~ '&page=1' }}">Primera</a>
                    </li>
                    <li class="page-item {% if current == 1 %}disabled{% endif %}">
                        <a class="page-link" href="{{ url ~ '&page=' ~ (current - 1) }}">Anterior</a>
                    </li>

                    {% for i in 1..totalPages %}
                        <li class="page-item {% if i == current %}active{% endif %}">
                            <a class="page-link" href="{{ url ~ '&page=' ~ i }}">{{ i }}</a>
                        </li>
                    {% endfor %}
                    
                    <li class="page-item {% if current == totalPages %}disabled{% endif %}">
                        <a class="page-link" href="{{ url ~ '&page=' ~ (current + 1) }}">Siguiente</a>
                    </li>
                    <li class="page-item {% if current == totalPages %}disabled{% endif %}">
                        <a class="page-link" href="{{ url ~ '&page=' ~ totalPages }}">Última</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
{% endblock %}

{% block specific_vendor %}{% endblock %}